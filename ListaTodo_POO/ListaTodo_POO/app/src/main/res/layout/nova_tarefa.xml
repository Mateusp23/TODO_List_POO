<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/novaTarefaAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_margin="32dp"
        android:hint="nova tarefa"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/btnNovaTarefa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/novaTarefaAdd"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/color_btn_defautl"
        android:layout_marginEnd="32dp"
        android:text="Salvar"
        android:textAllCaps="false"
        android:textColor="@color/color_text_btn_default"
        android:textSize="16sp" />

</RelativeLayout>